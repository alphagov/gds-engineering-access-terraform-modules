name: Terraform CI

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

permissions:
  contents: read
  pull-requests: write

jobs:
  pre-commit-checks:
    uses: gds-tech-and-security/github-actions/.github/workflows/pre-commit-checks.yml@feat/add-reusable-workflows
    permissions:
      contents: read
    with:
      terraform-version: ${{ vars.TERRAFORM_VERSION }}
      runs-on: static_ip_runner

